#!/bin/sh
# A rofi prompt to unmount drives.
# Provides you with mounted partitions, select one to unmount.
# Drives mounted at /, /boot and /home will not be options to unmount.

unmountusb() {
	[ -z "$drives" ] && exit;
	chosen=$(echo "$drives" | rofi -dmenu -i -p "Unmount which drive?" | awk '{print $1}');
	[ -z "$chosen" ] && exit;
	sudo -A umount "$chosen" && notify-send "ğŸ’» USB unmounting" "$chosen unmounted.";
}

unmountandroid() { \
	chosen=$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | rofi -dmenu -i -p "Unmount which device?");
	[ -z "$chosen" ] && exit;
	sudo -A umount -l "$chosen" && notify-send "ğŸ¤– Android unmounting" "$chosen unmounted.";
}

asktype() { \
	case "$(printf "USB\\nAndroid" | rofi -dmenu -i -p "Unmount a USB drive or Android device?")" in
		USB) unmountusb ;;
		Android) unmountandroid ;;
	esac;
}

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '($2=="part"||$2=="crypt")&&$4!~/\/boot|\/home$|SWAP/&&length($4)>1{printf "%s (%s)\n",$4,$3}');

if ! grep simple-mtpfs /etc/mtab; then
	[ -z "$drives" ] && notify-send "Umount failed" "No Umountable drive found" && exit;
	notify-send "ğŸ’» USB unmounting" "Umountable USB drive found."
	unmountusb;
else
	if [ -z "$drives" ]; then
		notify-send "ğŸ¤– Android unmounting" "Umountable Android device found."
		unmountandroid;
	else
		notify-send "ğŸ’» ğŸ¤– unmounting" "Umountable USB drive and Android device found."
		asktype;
	fi;
fi;

